# Discord Notification Configuration
# Replace YOUR_DISCORD_WEBHOOK_URL with your actual webhook URL
# Create webhook in Discord: Server Settings -> Integrations -> Webhooks

DISCORD_WEBHOOK_URL=YOUR_DISCORD_WEBHOOK_URL

# Notification settings
NOTIFY_ON_FAILURE=true
NOTIFY_ON_SUCCESS=false
NOTIFY_ON_WARNING=true

# Message templates with Discord formatting
MESSAGE_TEMPLATE_FAILURE=' **BUILD FAILED** - {workflow_name} in {repository}\n{details}'
MESSAGE_TEMPLATE_SUCCESS=' **BUILD SUCCESS** - {workflow_name} completed successfully\n{details}'
MESSAGE_TEMPLATE_WARNING=' **WARNING** - {workflow_name} has warnings\n{details}'

# Embed colors (Discord colors)
COLOR_SUCCESS='3066993'    # Green
COLOR_FAILURE='15158332'   # Red
COLOR_WARNING='16776960'   # Yellow
