# Repository Monitoring Thresholds Configuration
# Customize these values based on your project requirements

# HEALTH SCORE THRESHOLDS (0-10 scale)
# Overall health score thresholds for alerts
HEALTH_SCORE_CRITICAL=6.0      # Red alert - immediate action required
HEALTH_SCORE_WARNING=7.5       # Yellow alert - monitor closely
HEALTH_SCORE_GOOD=8.5          # Green - healthy repository

# CODE QUALITY THRESHOLDS
TEST_COVERAGE_MINIMUM=80        # Minimum test coverage percentage
TEST_COVERAGE_WARNING=90        # Warning threshold for test coverage
CODE_QUALITY_MINIMUM=70         # Minimum code quality score
CODE_QUALITY_WARNING=85         # Warning threshold for code quality

# PERFORMANCE THRESHOLDS
MAX_BUILD_TIME_MINUTES=30       # Maximum allowed build time
MEMORY_USAGE_WARNING_MB=1000    # Memory usage warning threshold
CPU_USAGE_WARNING_PERCENT=80    # CPU usage warning threshold

# ACTIVITY THRESHOLDS
MIN_COMMITS_PER_WEEK=1          # Minimum commits per week
MIN_ACTIVE_DAYS_PER_MONTH=5     # Minimum active development days per month
MAX_DAYS_SINCE_LAST_COMMIT=14   # Maximum days since last commit before warning

# DEPENDENCY THRESHOLDS
MAX_OUTDATED_DEPENDENCIES=5     # Maximum number of outdated dependencies
MAX_VULNERABLE_DEPENDENCIES=2   # Maximum number of vulnerable dependencies
DEPENDENCY_UPDATE_FREQUENCY=30  # Days between dependency updates

# FILE SYSTEM THRESHOLDS
MAX_LARGE_FILES=3               # Maximum number of large files (>50MB)
MAX_TEMP_FILES=10              # Maximum number of temporary files
MAX_UNTRACKED_FILES=50         # Maximum number of untracked files

# NOTIFICATION SETTINGS
NOTIFY_ON_CRITICAL=true         # Send notifications for critical alerts
NOTIFY_ON_WARNING=true          # Send notifications for warnings
NOTIFY_ON_SUCCESS=false         # Send notifications for successful builds
NOTIFICATION_FREQUENCY=1        # Minimum hours between notifications

# MONITORING SCHEDULE
DAILY_HEALTH_CHECK=true         # Run daily health monitoring
WEEKLY_DEEP_ANALYSIS=true      # Run weekly comprehensive analysis
MONTHLY_REPORT=true            # Generate monthly summary reports

# ALERT ESCALATION
ESCALATION_TIME_HOURS=24       # Hours before escalating unresolved alerts
ESCALATION_CONTACTS=team@company.com,manager@company.com

# CUSTOM METRICS
ENABLE_CUSTOM_METRICS=true      # Enable custom performance metrics
CUSTOM_METRIC_1_NAME="API Response Time"
CUSTOM_METRIC_1_THRESHOLD=5000  # 5 seconds
CUSTOM_METRIC_2_NAME="Memory Leak Detection"
CUSTOM_METRIC_2_THRESHOLD=100   # 100MB growth

# REPORTING
REPORT_FORMAT=markdown          # Report format: markdown, html, json
REPORT_RETENTION_DAYS=90        # Days to keep historical reports
REPORT_INCLUDE_CHARTS=true      # Include charts in reports
REPORT_INCLUDE_TRENDS=true      # Include trend analysis

# INTEGRATION SETTINGS
SLACK_INTEGRATION=true          # Enable Slack notifications
DISCORD_INTEGRATION=true        # Enable Discord notifications
EMAIL_INTEGRATION=true          # Enable email notifications
WEBHOOK_INTEGRATION=false       # Enable custom webhook notifications

# DEBUG SETTINGS
DEBUG_MODE=false                # Enable debug logging
VERBOSE_LOGGING=false          # Enable verbose logging
LOG_RETENTION_DAYS=30          # Days to keep log files
