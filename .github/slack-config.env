# Slack Notification Configuration
# Replace YOUR_SLACK_WEBHOOK_URL with your actual webhook URL
# Get webhook URL from: https://api.slack.com/apps -> Your App -> Incoming Webhooks

SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL

# Notification settings
NOTIFY_ON_FAILURE=true
NOTIFY_ON_SUCCESS=false
NOTIFY_ON_WARNING=true

# Channels for different types of notifications
CHANNEL_FAILURE='#alerts'
CHANNEL_SUCCESS='#builds'
CHANNEL_WARNING='#monitoring'

# Message templates
MESSAGE_TEMPLATE_FAILURE=' *BUILD FAILED* - {workflow_name} in {repository}'
MESSAGE_TEMPLATE_SUCCESS=' *BUILD SUCCESS* - {workflow_name} completed successfully'
MESSAGE_TEMPLATE_WARNING=' *WARNING* - {workflow_name} has warnings'
